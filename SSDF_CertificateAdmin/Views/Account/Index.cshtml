@model IEnumerable<SSDF_CertificateAdmin.Models.EditUserViewModel>
@{
    ViewBag.Title = "Användare";
}

<h2>@ViewBag.Title.</h2>

<p>
    @Html.ActionLink("Registrera ny", "Register")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.userName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.userName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.ActionLink("Ändra", "Edit", new { id = item.userName }) |
                @Html.ActionLink("Lösenord", "Manage", new { id = item.userName }) |
                @Html.ActionLink("Roller", "UserRoles", new { id = item.userName }) |
                @Html.ActionLink("Ta bort", "Delete", new { id = item.userName })
            </td>
        </tr>
    }

</table>
